<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="match_parent">

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/card_bg"
        android:layout_margin="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btn_payment_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fbrebfre"
            android:layout_marginTop="8dp"
            android:lineSpacingExtra="8dp"
            android:textColor="@color/content_text_color" />

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:layout_alignStart="@+id/tv_title"
            android:layout_alignLeft="@id/tv_title"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:text="20 March 2019, 10:00 AM "
            android:lineSpacingExtra="8dp"
            android:textColor="@color/content_text_color" />

        <TextView
            android:id="@+id/gengj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_description"
            android:layout_alignStart="@+id/tv_description"
            android:layout_alignLeft="@id/tv_description"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:lineSpacingExtra="8dp"
            android:text="20 March 2019, 10:00 AM "
            android:textColor="@color/content_text_color" />

        <TextView
            android:id="@+id/fbrebfre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/gengj"
            android:layout_alignStart="@+id/tv_description"
            android:layout_alignLeft="@id/tv_description"
            android:layout_marginTop="8dp"
            android:layout_marginRight="16dp"
            android:lineSpacingExtra="8dp"
            android:text="20 March 2019, 10:00 AM "
            android:textColor="@color/content_text_color" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="20dp"
            android:text="20 March 2019, 10:00 AM "
            android:textColor="@color/title_text_color"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:text="Rs. 2199.43"
            android:textColor="@color/content_text_color" />


    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>